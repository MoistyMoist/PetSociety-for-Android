
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ReportLostPetActivity" >

    <LinearLayout 
        android:id="@+id/linearLayout0"
       	android:layout_width="match_parent"
   	 	android:layout_height="wrap_content"
        android:orientation="vertical">
        
	<EditText
        android:id="@+id/et_lost_reward"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Reward" />
	
    <EditText
        android:id="@+id/et_lost_age"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:hint="Age"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_lost_x"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="X"
        android:inputType="phone" />
    
	<EditText
        android:id="@+id/et_lost_y"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Y"
        android:inputType="phone" />
    
	<Button
        android:id="@+id/b_lost_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select" />
	
	<LinearLayout
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	<Button 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="Set Time" 
    android:onClick="showTimePickerDialog" />
	
	<TextView 
	    android:id="@+id/tv_lost_time"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Time"/>
	</LinearLayout>
	
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
	
	<Button 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="Set Date" 
    android:onClick="showDatePickerDialog" />
	
		<TextView 
		    android:id="@+id/tv_lost_date"
		    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Date"/>
	
	</LinearLayout>
	
    </LinearLayout>
	
    <Button
        android:id="@+id/b_lost_report"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Report" />

</RelativeLayout>