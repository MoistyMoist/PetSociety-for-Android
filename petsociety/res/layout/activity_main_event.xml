<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
			android:gravity="center"
            android:text="Bring your pets out to mingle with other pets!"
            android:textSize="20sp" />

        <!-- just put ur items here -->

        <fragment
            android:id="@+id/event_map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <Button
            android:id="@+id/btn_current_location"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="15dp"
            android:text="Current location"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btn_other_location"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_current_location"
            android:layout_alignBottom="@+id/btn_current_location"
            android:layout_toRightOf="@+id/btn_current_location"
            android:text="Other location"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_map"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Pets&apos; Day Out "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#00AAAA"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_no"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btn_maybe"
            android:layout_marginLeft="8dp"
            android:text="Decline" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:text="Where do you want to go from?"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Time:"
            android:textColor="#00AAAA"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="1-5PM"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_centerHorizontal="true"
            android:text="Location:"
            android:layout_marginTop="15dp"
            android:textColor="#00AAAA"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Bishan Park"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_going"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_maybe"
            android:layout_below="@+id/btn_current_location"
            android:layout_marginTop="25dp"
            android:layout_marginRight="8dp"
            android:text="Going" />

        <Button
            android:id="@+id/btn_maybe"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Maybe" />

    </RelativeLayout>

</ScrollView>