<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >
	
    <RelativeLayout 
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_centerInParent="true">
    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:contentDescription="Logo"
        android:src="@drawable/ic_launcher" />
    
    <EditText 
        android:id="@+id/et_login_username"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login_logo"
        android:hint="Username"/>
    
	<EditText 
        android:id="@+id/et_login_pass"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_username"
        android:inputType="textPassword"
        android:hint="Password"/>
	
	<Button 
        android:id="@+id/b_login_login"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/et_login_pass"
        android:text="Sign In"/>
	
		<Button 
        android:id="@+id/b_login_register"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/b_login_login"
        android:text="Register"/>
	
	<TextView
		android:id="@+id/tv_login_forget"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/b_login_register"
		android:layout_centerHorizontal="true"
		android:textIsSelectable="true"
        android:text="Forgot Password?"/>  
	</RelativeLayout>  

</RelativeLayout>
