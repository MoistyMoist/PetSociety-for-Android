<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LocationInfoActivity" >

    <TextView
        android:id="@+id/singleAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:text="@string/hello_world"
        android:textSize="20dp" />

 <fragment
     android:id="@+id/nearbySingle_map"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@+id/singleDescription"
     android:layout_alignParentRight="true"
     android:layout_below="@+id/singleTitle"
     android:orientation="vertical"
     android:name="com.google.android.gms.maps.SupportMapFragment" />

 <TextView
     android:id="@+id/singleTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="39dp"
     android:text="@string/hello_world"
     android:textColorLink="@color/green"
     android:textSize="30dp" />

 <TextView
     android:id="@+id/singleDescription"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@+id/singleAddress"
     android:layout_alignLeft="@+id/singleAddress"
     android:layout_marginBottom="64dp"
     android:text="@string/hello_world"
     android:textSize="20dp" />
        
</RelativeLayout>
