<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LocationInfoActivity" >

 <fragment
     android:id="@+id/nearbySingle_map"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@+id/singleDescription"
     android:layout_alignParentRight="true"
     android:layout_below="@+id/singleTitle"
     android:orientation="vertical"
     android:name="com.google.android.gms.maps.SupportMapFragment" />

 <TextView
     android:id="@+id/singleTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="39dp"
     android:text="@string/hello_world"
     android:textColorLink="@color/green"
     android:textSize="30dp" />

 
 
 <TextView
     android:id="@+id/singleDescription"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@+id/singleAddress"
	android:layout_toRightOf="@+id/textView1"
     android:layout_marginBottom="64dp"
     android:text="@string/hello_world"
     android:textSize="20dp" />

 <TextView
     android:id="@+id/textView1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBaseline="@+id/singleDescription"
     android:layout_alignBottom="@+id/singleDescription"
     android:layout_alignParentLeft="true"
     android:text="Description :"
     android:textAppearance="?android:attr/textAppearanceSmall" />

 <TextView
     android:id="@+id/TextView01"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@+id/singleAddress"
     android:layout_alignLeft="@+id/singleAddress"
     android:layout_marginBottom="16dp"
     android:text="Address :"
     android:textAppearance="?android:attr/textAppearanceSmall" />

 <TextView
     android:id="@+id/singleAddress"
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:layout_alignLeft="@+id/textView1"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="104dp"
     android:text="@string/hello_world"
     android:textSize="20dp" />

 <TextView
     android:id="@+id/TextView02"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/singleAddress"
     android:layout_alignTop="@+id/singleAddress"
     android:layout_marginTop="52dp"
     android:text="Contact :"
     android:textAppearance="?android:attr/textAppearanceSmall" />

 <TextView
     android:id="@+id/TextView03"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignRight="@+id/TextView01"
     android:layout_below="@+id/TextView02"
     android:layout_marginTop="34dp"
     android:text="Website :"
     android:textAppearance="?android:attr/textAppearanceSmall" />

 <TextView
     android:id="@+id/tvContact"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/TextView03"
     android:layout_below="@+id/TextView02"
     android:text="Hello"
     android:textAppearance="?android:attr/textAppearanceLarge" />

 <TextView
     android:id="@+id/tvWebsite"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/TextView03"
     android:layout_below="@+id/TextView03"
     android:text="Hello"
     android:textAppearance="?android:attr/textAppearanceLarge" />
        
</RelativeLayout>
